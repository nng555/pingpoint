<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Theme.Holo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".BothActivity"
    android:clickable="false"
    android:background="#ffc9424b">

    <Button
        android:id="@+id/friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="180dp"
        android:text="FRIENDS"
        android:background="#ffffff"
        android:textColor="#ffc9424b"
        android:layout_alignWithParentIfMissing="true"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textview_69"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:id="@+id/group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/friend_button"
        android:text="GROUPS"
        android:background="#ffffff"
        android:textColor="#ffc9424b"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:background="#ffffff"
        android:layout_marginTop="340dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_signin_btn_light_text_default"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_alignBottom="@+id/textview_69"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="15dp"
        android:layout_alignParentLeft="false"
        android:layout_toRightOf="@+id/textview_69"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />
    <TextView
        android:id="@+id/textview_69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="pingp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="75dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:text="int"
        android:layout_alignTop="@+id/textview_69"
        android:textSize="75dp"
        android:textColor="#ffffff" />

</RelativeLayout>